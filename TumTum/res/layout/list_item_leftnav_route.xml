<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/list_item_route_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:src="@drawable/icon_gesture_orange" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="0dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/list_route_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3A Hostels"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/list_route_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hostel 13 - Main building - Main gate"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>