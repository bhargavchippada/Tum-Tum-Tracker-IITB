<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/list_item_route_image"
        android:layout_width="@dimen/dimen_48"
        android:layout_height="@dimen/dimen_48"
        android:layout_gravity="center"
        android:padding="@dimen/dimen_8"
        android:src="@drawable/icon_gesture_orange" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_8"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/dimen_8"
        android:paddingTop="@dimen/dimen_8" >

        <TextView
            android:id="@+id/list_route_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3A Hostels"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_20" />

        <TextView
            android:id="@+id/list_route_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hostel 13 - Main building - Main gate"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

</LinearLayout>